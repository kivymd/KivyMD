#:import toast kivymd.toast.toast


<DropListItem>
    text: root.text

    IconLeftWidget:
        icon: root.icon


<MDDropItem>
    name: "drop item"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDDropDownItem:
        id: dropdown_item
        text: "Item 0"
        pos_hint: {"center_x": .5, "center_y": .6}
        current_item: "Item 0"
        on_release: root.menu.open()

    MDRaisedButton:
        pos_hint: {"center_x": .5, "center_y": .3}
        text: "Check Item"
        on_release: toast(dropdown_item.current_item)
