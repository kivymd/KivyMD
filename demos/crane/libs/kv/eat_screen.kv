#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex

<CraneEatScreen>
    orientation: "vertical"

    MDBoxLayout:
        adaptive_height: True
        orientation: "vertical"
        md_bg_color: gch("#5D1049")
        spacing: dp(10)
        padding: [dp(25), 0, dp(25), dp(25)]

        CraneTextField:
            hint_text: "Diners"
            icon_left: "account"
        CraneTextField:
            hint_text: "Select date"
            icon_left: "calendar-range"
        CraneTextField:
            hint_text: "Select time"
            icon_left: "clock-outline"
        CraneTextField:
            hint_text: "Select location"
            icon_left: "silverware-fork-knife"

    MDBoxLayout:
        canvas.before:
            Color:
                rgba: root.theme_cls.bg_normal
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [dp(20), dp(20), 0, 0]

        ScrollView:

            MDList:

                MDBoxLayout:
                    adaptive_height: True
                    padding: dp(15)

                    MDLabel:
                        text: "Explore restaurants by destination"
                        font_style: "Subtitle2"
                        theme_text_color: "Hint"
                        adaptive_height: True

                CraneListItem:
                    text: "Dallas, United States"
                    secondary_text: "876 restaurants"
                    image: f"{environ['CRANE_ROOT']}/assets/images/0.jpg"
